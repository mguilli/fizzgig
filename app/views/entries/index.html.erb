<h2>Account Log: <%= @register.name %></h2>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Credit</th>
      <th>Debit</th>
      <th>Balance</th>
    </tr>
  </thead>
  <tbody>
    <% @entries.each do |entry| %>
      <% if entry.cleared %>
        <tr>
      <% else %>
        <tr class="warning">
      <% end %>

        <td><%= entry.date %></td>
        <td><%= entry.name %></td>
        <td><%= entry.credit %></td>
        <td><%= entry.debit %></td>
        <td>0</td>
      </tr>
    <% end %>
    
    </tbody>
</table>
