<h2>Account Log: <%= @register.name %></h2>
<h4>Available Balance = <%= @available_balance %></h4>
<h4>Bank balance = <%= @cleared_balance %></h4>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Debit</th>
      <th>Credit</th>
      <th>Balance</th>
    </tr>
  </thead>
  <tbody>
    <% balance = @available_balance %>
    <% @entries.each do |entry| %>
      <% movement = (entry.credit - entry.debit) %>
      <% if entry.cleared %>
        <tr>
      <% else %>
        <tr class="warning">
      <% end %>

        <td><%= entry.date %></td>
        <td><%= entry.name %></td>
        <td><%= hide_if_nil(entry.debit) %></td>
        <td><%= hide_if_nil(entry.credit) %></td>
        <td><%= balance %></td>
      </tr>
      <% balance -= movement %>
    <% end %>
    
  </tbody>
</table>
<h2><%= balance %></h2>