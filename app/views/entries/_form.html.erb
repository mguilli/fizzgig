<%= form_for [register, entry], remote: true, html: {class: 'form-inline', role: 'form'} do |f| %>

  <div class='form-group'>
    <%= f.label :date %>
    <%= f.date_field :date, class: 'form-control', value: Time.now.strftime('%Y-%m-%d') %>
  </div>

  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', autofocus: true %>
  </div>

  <div class='form-group'>
    <%= label_tag :debit %>
    <%= text_field_tag :debit, nil, class: 'form-control', placeholder: '0.00' %>  
  </div>

  <div class='form-group'>
    <%= label_tag :credit %>
    <%= text_field_tag :credit, nil, class: 'form-control', placeholder: '0.00' %>
  </div>

  <div class='form-group'>
    <%= f.submit class: 'btn btn-primary'%>
  </div>
<% end %>
<br />