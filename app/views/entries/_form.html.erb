<%= form_for [@register, @entry], remote: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :date %>
  <%= f.date_field :date %>

  <%= label_tag :credit %>
  <%= text_field_tag :credit, value = "0.00" %>

  <%= label_tag :debit %>
  <%= text_field_tag :debit, value = "0.00" %>  

  <%= f.submit %>
<% end %>